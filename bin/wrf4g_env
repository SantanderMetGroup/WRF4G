#!/bin/bash

# wrf4g_env load WRF4G shell environment variables

if test -z $WRF4G_LOCATION; then
  if test -f $HOME/.wrf4g/etc/framework4g.conf; then
    WRF4G_LOCATION=$HOME/.wrf4g
  else
    WRF4G_BIN_LOCATION=`dirname $0`
    [ ${WRF4G_BIN_LOCATION} == "." ] && WRF4G_BIN_LOCATION=$PWD
    WRF4G_LOCATION=`dirname $WRF4G_BIN_LOCATION`
  fi
  export WRF4G_LOCATION=${WRF4G_LOCATION}
fi

if test -f $WRF4G_LOCATION/etc/framework4g.conf; then
  FRAMEWORK4G_CONF="$WRF4G_LOCATION/etc/framework4g.conf"
else
  echo -e "$WRF4G_LOCATION/etc/framework4g.conf does not exist"
  exit 1
fi

export GW_LOCATION=$WRF4G_LOCATION/opt/gw_drm4g
export MYSQL_LOCATION=$WRF4G_LOCATION/opt/mysql-5.5
export PATH=$GW_LOCATION/bin:$PATH
export PYTHONPATH=${WRF4G_LOCATION}/lib/python:${PYTHONPATH}
