#! /bin/bash

# wrf4g_framework.

if test -z $WRF4G_LOCATION; then
   echo '$WRF4G_LOCATION variable not established. Please export WRF4G_LOCATION and try again'
   exit 1
fi

if test -f $WRF4G_LOCATION/etc/framework4g.conf; then
   FRAMEWORK4G_CONF="$WRF4G_LOCATION/etc/framework4g.conf"
else
   echo '$WRF4G_LOCATION/etc/framework4g.conf does not exist'
   exit 1
fi

export GW_LOCATION=$WRF4G_LOCATION/opt/drm4g_gridway
$GW_LOCATION/bin/gwhost $*