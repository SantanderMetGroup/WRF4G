[DEFAULT]
#-------------------------------------------------------------------------------
#               DATA REPOSITORY 
#
# WRF4G_BASEPATH: Common path from which WRF4G will save all output
# Under WRF4G_BASEPATH one MUST find the hierarchy
#
# WRF4G_BASEPATH/
#  +-- experiments
#       `-- [expname]
#             `-- [reaname]
#                   +-- log
#                   +-- output
#                   +-- restart
#                   |    `-- wrfrst_d01_1990-01-01_12:00:00
#                   `-- wpsout
#
# WRF4G_DOMAINPATH: Path to the domain of simulation (it must be done previously)
#
# WRF4G_INPUT: Path to the global data for the boundary and initial data
#
# WRF4G_APP: Path to the necessary applications (pre-processor, post-processor, 
# WRF packages, etc...)
#
#-------------------------------------------------------------------------------

WRF4G_BASEPATH   = ${WRF4G_LOCATION}/repository/output
WRF4G_DOMAINPATH = ${WRF4G_LOCATION}/repository/domains
WRF4G_INPUT      = ${WRF4G_LOCATION}/repository/input
WRF4G_APPS       = ${WRF4G_LOCATION}/repository/apps

#-------------------------------------------------------------------------------
#             SOFTWARE CONFIGURATION 
#
# Location of WRF, NETCDF, NCO and CDO bundleds. 
#
#-------------------------------------------------------------------------------

WRF4G_WRF    = ${WRF4G_APPS}/WRF/WRFbin-3.3.1_r1184INTEL_OMPI.tar.gz
WRF4G_NETCDF = ${WRF4G_APPS}/netcdf/netcdf-4.1.1.tar.gz 
WRF4G_NCO    = ${WRF4G_APPS}/nco/nco-4.0.9.tar.gz 
WRF4G_CDO    = ${WRF4G_APPS}/cdo/cdo-1.3.0.tar.gz

#-------------------------------------------------------------------------------
#           RUNNING OPTIONS
#
# NP: Number of processors
#
# REQUIREMENTS: Job execution requirements.
#      HOSTNAME:   Computing resource name (e.g. local_machine)
#      ARCH:       Architecture of the computing resource (e.g. i686, x86_64)
#      QUEUE_NAME: Name of the queue (e.g. default, short) 
#
# ENVIRONMET: Set job environment variables.
#      NODES:      Number of nodes assigned to the job
#      PPN:        Specify the number of processors per node requested for the job
#      CPUTIME:    Maximum amount of CPU time used by all processes in the job (HH:MM:SS)
#      WALLTIME:   Maximum amount of real time during which the job can be in the running state (HH:MM:SS)
#      MEMORY:     Maximum amount of memory used by the job (MB)
#-------------------------------------------------------------------------------

NP = 1
REQUIREMENTS = 'ARCH="x86_64"'